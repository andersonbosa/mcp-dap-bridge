{
  "name": "@mcp-adapter-vscode/dap-bridge-extension",
  "displayName": "MCP Adapter for VSCode",
  "description": "MCP Adapter for VSCode",
  "version": "0.0.1",
  "publisher": "andersonbosa",
  "repository": {
    "type": "git",
    "url": "https://github.com/andersonbosa/mcp-debug-bridge.git"
  },
  "categories": [
    "AI",
    "Debuggers",
    "Other"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpVscodeAdapter.helloWorld",
        "title": "Hello World",
        "category": "MCP Adapter"
      }
    ],
    "configuration": {
      "title": "MCP Adapter for VSCode",
      "properties": {
        "mcpAdapterForVSCode.wsServerUrl": {
          "type": "string",
          "default": "ws://localhost:8445",
          "description": "WebSocket URL for the MCP Server connection"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vsix": "vsce package --allow-star-activation",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.103.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@andersonbosa/core-bridge": "file:../core-bridge",
    "ws": "^8.18.3"
  }
}

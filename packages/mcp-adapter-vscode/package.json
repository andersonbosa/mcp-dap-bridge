{
  "name": "@andersonbosa/mcp-debug-ex-adapter-vscode",
  "version": "0.0.1",
  "displayName": "MCP DebugX Adapter for VSCode",
  "description": "MCP DebugX Adapter for VSCode",
  "author": "Anderson Bosa",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andersonbosa/mcp-debugx.git"
  },
  "categories": [
    "AI",
    "Debuggers",
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vsix": "vsce package --allow-star-activation",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run build-tests && npm run build && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.93.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@andersonbosa/mcp-debugx-core": "file:../mcp-core",
    "ws": "^8.18.3"
  },
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpDebugxVscodeAdapter.helloWorld",
        "title": "Hello World",
        "category": "MCP DebugX Adapter"
      }
    ],
    "configuration": {
      "title": "MCP DebugX Adapter for VSCode",
      "properties": {
        "mcpAdapterForVSCode.wsServerUrl": {
          "type": "string",
          "default": "ws://localhost:8445",
          "description": "WebSocket URL for the MCP DebugX Server connection"
        },
        "mcpAdapterForVSCode.mcpServerUrl": {
          "type": "string",
          "default": "ws://localhost:8445",
          "description": "MCP DebugX Server URL"
        }
      }
    }
  }
}
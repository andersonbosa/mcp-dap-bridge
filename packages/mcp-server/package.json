{
  "name": "@andersonbosa/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server Boilerplate with Docker support",
  "keywords": [
    "mcp",
    "server",
    "typescript",
    "docker"
  ],
  "author": "Anderson Bosa",
  "license": "CC-BY-SA-4.0",
  "engines": {
    "node": ">=22"
  },
  "main": "dist/index.js",
  "scripts": {
    "inspect": "DANGEROUSLY_OMIT_AUTH=true npx @modelcontextprotocol/inspector node dist/index.js",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf -- ./dist",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "lint": "biome lint src/**/*.ts",
    "format": "biome format src/**/*.ts --write",
    "biome:check": "biome check src/**/*.ts --write",
    "docker:build": "docker build -t mcp-server:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t mcp-server:dev .",
    "docker:run": "docker-compose up -d",
    "docker:run:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f mcp-server",
    "docker:shell": "docker-compose exec mcp-server sh",
    "docker:clean": "docker-compose down -v && docker image prune -f"
  },
  "dependencies": {
    "@andersonbosa/core-bridge": "file:../core-bridge",
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "jest": "^30.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}